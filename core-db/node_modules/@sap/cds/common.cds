/**
 *  Recommended types for language, currency and country codes 
 *  along with corresponding code lists, to be reused in applications.  
 */

type Language : String(33) @ValueList.entity: 'sap_common_Languages';
type Currency : String(3) @ValueList.entity: 'sap_common_Currencies';
type Country : String(3) @ValueList.entity: 'sap_common_Countries';

context sap.common {
    entity Languages : CodeList { key code : Language; }     
    entity Countries : CodeList { key code : Country; }     
    entity Currencies : CodeList { key code : Currency; }     
}

abstract entity CodeList @cds.autoexpose {
    title : localized String;
    descr : localized String;
} 

annotate Language with @title: '{i18n>Language} Language Code';
annotate Currency with @title: '{i18n>Currency} Currency Code';
annotate Country with @title: '{i18n>Country} Country Code';


/**
 *  An aspect to capture changes by user and name. 
 */

abstract entity managed {
    createdBy: User @cds.on.insert: #user;  
    modifiedBy: User @cds.on.update: #user;  
    createdAt: DateTime @cds.on.insert: #now;
    modifiedAt: DateTime @cds.on.update: #now;
}


/**
 *  An aspect for entities with temporal data. 
 */

abstract entity temporal { valid : Period; }


type User : String;
type Period { _from: DateTime; _to: DateTime; }
